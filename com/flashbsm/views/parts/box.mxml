<?xml version="1.0" encoding="utf-8"?>
<mx:VBox
	xmlns:mx="http://www.adobe.com/2006/mxml"
	width="100%" height="100%" >


	<mx:Script>
		<![CDATA[
			import com.flashbsm.model.fbsmModel;
			import flash.events.Event;
			
			[Bindable]
			public var info:Object;
			
			private function itemClick (event:Event):void
			{
			    dispatchEvent(new Event("itemClick"));
			}
			
		]]>

	</mx:Script>
	
	<mx:Metadata>
	    [Event(name="itemClick", type="flash.events.Event")] 
	</mx:Metadata>
	
	<mx:VBox id="group" width="100%" height="100%" click="{itemClick(event)}"
	
	    styleName="{info.Selected==true?'groupDown':'groupNormal'}"
	    mouseOver="{info.Selected==true?group.styleName = 'groupDown':group.styleName = 'groupOver'}"
	    mouseOut="{info.Selected==true?group.styleName = 'groupDown':group.styleName = 'groupNormal'}"
	    
	    horizontalAlign="center" verticalAlign="middle">
		<mx:Label text="{info.Name}" />
	</mx:VBox>
	

</mx:VBox>

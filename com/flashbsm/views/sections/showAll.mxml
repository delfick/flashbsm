<?xml version="1.0" encoding="utf-8"?>
<mx:VBox
	xmlns:mx="http://www.adobe.com/2006/mxml"
	xmlns:parts="com.flashbsm.views.parts.*"
	xmlns:containers="com.components.containers.*"
	width="100%" height="100%">

	<mx:Script>
		<![CDATA[
			import com.flashbsm.model.*;
		]]>

	</mx:Script>
	
	<mx:VBox width="100%" height="100%">
		
		<containers:AnimatedTileList width="100%" height="100%" creationComplete="theCanvas.layoutTiles()"
				id="theCanvas" verticalScrollPolicy="on" styleName="box" paddingTop="10"
				dataProvider="{fbsmModel.getInstance().everything.allPlugins}"
				itemRenderer="com.flashbsm.views.parts.showAllBox" useItemThumb="true"/>
		<parts:footerArea width="100%" height="60" styleName="box" />		
	</mx:VBox>
</mx:VBox>
